@{
    ViewData["Title"] = "Login Page";
}
<div class="d-flex flex-column align-items-left" style="width: 100%;">
    <h1 class="display-4 mb-5">Login</h1>
    <form asp-controller="Login" asp-action="Submit" style="width: 60%">
        <div class="text-danger my-4">@ViewBag.Message</div>
        <div class="form-group d-flex align-items-center justify-content-left">
            <input class="form-control" name="emailaddress" style="width: 70%;" placeholder="EmailAddress" />
        </div>
        <div class="form-group d-flex align-items-center justify-content-left">
            <input class="form-control" type="password" name="memberpassword" style="width: 70%;" placeholder="MemberPassword" />
        </div>

        <div class="d-flex justify-content-left">
            <input type="submit" class="btn btn-primary px-3" style="width: 30%;" value="Login" />
        </div>
    </form>
    <p>Don't have a account ?' <a href="Register"> Register Here</a>.</p>
</div>
